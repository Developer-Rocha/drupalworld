<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Drupal">
  <description>Drupal coding standards</description>
  <rule ref="Drupal"/>
  <rule ref="DrupalPractice"/>
  <file>web/modules/custom/</file>
  <file>web/themes/custom/</file>
  <exclude-pattern>vendor/*</exclude-pattern>
  <exclude-pattern>*.min.js</exclude-pattern>
  <exclude-pattern>web/themes/custom/drupalizer/css/*</exclude-pattern>
  <exclude-pattern>web/themes/custom/drupalizer/js/*</exclude-pattern>
  <exclude-pattern>web/themes/custom/drupalizer/scripts/*</exclude-pattern>
  <exclude-pattern>web/themes/custom/drupalizer/sass/*</exclude-pattern>
</ruleset>
