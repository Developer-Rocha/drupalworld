{#
/**
 * @file
 * Theme override to display a one-column layout.
 *
 * Available variables:
 * - in_preview: Whether the plugin is being rendered in preview mode.
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 */
#}
{%
  set classes = [
    'layout',
    'layout--onecol',
    'lb-section',
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    {% if content.title %}
      {% set label = content.title.label %}
      {% set wrapper = content.title.wrapper ?: 'h2' %}
      {% set title_classes = 'section-title ' ~ content.title.attributes.class|join(' ') %}
      <{{ wrapper }} class="{{ title_classes }}">{{ label }}</{{ wrapper }}>
    {% endif %}

    <div {{ region_attributes.content.addClass('layout__region', 'layout__region--content') }}>
      {{ content.content }}
    </div>
  </div>
{% endif %}
